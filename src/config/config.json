{
  "servers": [
    {
      "server_address": "127.0.0.2",
      "server_name": "server1.home",
      "ports": ["8080"],
      "client_body_size_limit": "10M",
      "session": {
        "enabled": true,
        "name": "session_id",
        "options": {
          "max_age": 86400,
          "domain": "server1.home",
          "path": "/",
          "secure": false,
          "http_only": true,
          "same_site": "Lax"
        }
      },
      "error_pages": {
        "custom_pages": {
          "404": "error/404.html"
        }
      },
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST", "DELETE"],
          "root": "static",
          "default_page": "index.html",
          "directory_listing": true,
          "redirect": "/home"
        },
        {
          "path": "/home",
          "methods": ["GET", "POST", "DELETE"],
          "root": "static",
          "default_page": "index.html",
          "directory_listing": false,
          "session_required": false,
          "session_redirect": "/"
        }
      ]
    },
    {
      "server_address": "127.0.0.3",
      "server_name": "server2.home",
      "ports": ["8082"],
      "client_body_size_limit": "10M",
      "routes": [
        {
          "path": "/",
          "methods": ["GET"],
          "root": "example",
          "default_page": "index.html",
          "directory_listing": false
        },
        {
          "path": "/api/files/list",
          "methods": ["GET"]
        },
        {
          "path": "/api/files/upload",
          "methods": ["POST"]
        },
        {
          "path": "/api/files/delete/:id",
          "methods": ["DELETE"]
        }
      ]
    }
  ]
}
