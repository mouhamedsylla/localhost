{
  "servers": [
    {
      "server_address": "127.0.0.1",
      "server_name": "localhost",
      "ports": ["8080"],
      "client_body_size_limit": "10M",
      "error_pages": {
        "custom_pages": {
          "404": "error/404.html"
        }
      },
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST", "DELETE"],
          "root": "static",
          "default_page": "index.html",
          "directory_listing": false
        },
        {
          "path": "/home",
          "methods": ["GET", "POST", "DELETE"],
          "root": "static",
          "default_page": "index.html",
          "directory_listing": false
        }
      ]
    },
    {
      "server_address": "0.0.0.0",
      "server_name": "localserver",
      "ports": ["8082"],
      "client_body_size_limit": "10M",
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST", "DELETE"],
          "root": "example",
          "default_page": "index.html",
          "directory_listing": false
        }
      ]
    }
  ]
}
