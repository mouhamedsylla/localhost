{
  "servers": [
    {
      "server_address": "127.0.0.1",
      "server_name": "localhost",
      "ports": ["8080", "8081"],
      "client_body_size_limit": "10M",
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST"],
          "root": "static",
          "default_page": "index.html",
          "directory_listing": true
        }
      ]
    },
    {
      "server_address": "0.0.0.0",
      "server_name": "localserver",
      "ports": ["8082"],
      "client_body_size_limit": "10M",
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST"],
          "root": "static",
          "directory_listing": false
        }
      ]
    }
  ]
}
